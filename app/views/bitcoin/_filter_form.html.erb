<div class="filter-form">
  <%= form_for(form, url: root_path, method: :get) do |f| %>
    <%= f.label :start, 'from:', class: 'filter-form__label' %>
    <%= f.date_field :start, value: form.start %>

    <%= f.label :end, 'to:', class: 'filter-form__label' %>
    <%= f.date_field :end, value: form.end %>

    <%= f.label :currency, 'currency:', class: 'filter-form__label' %>
    <%= f.select :currency, Bitcoin::FilterForm::AVAILABLE_CURRENCIES, {}, class: 'filter-form__currency-select' %>

    <%= f.button :filter %>
  <% end %>
</div>
